/*订单列表*/
.orderDetails{
	background: #f3f3f3;
	border-bottom: 10rpx solid #d6cccc;
}
.orderListTitle{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListTitle .storeImg{
	float: left;
	width: 50rpx;
	height: 50rpx;
	border-radius: 35rpx;
	margin:15rpx;
}
.orderListTitle .storeImg image{
	border-radius: 35rpx;
	width: 100%;
	height: 100%;
}
.orderListTitle .storeName{
	padding-right: 50rpx;
	
	background-size: 35rpx 35rpx;
}
.orderListTitle .orderStatus{
	float: right;
	margin-right: 20rpx;
	color: #2f7b27;
	font-size: 34rpx;
}
.orderListDetails{
	display: flex;
	height: 150rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.orderListDetails .productImg{
	flex: 1;
	height: 120rpx;
	margin-top: 10rpx;
	margin-left: 20rpx;
}
.orderListDetails .productImg image{
	width: 100%;
	height: 100%;
}
.orderListDetails .productInfo{
	flex: 4;
	padding: 20rpx 30rpx;
}
.orderListDetails .productInfo .productTitle{
	overflow: hidden;
	text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.orderListDetails .productInfo .productQuantity{
	float: right;
}
.productCount{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f3f3f3;
}
.productCount>view{
	float: right;
	margin-right: 30rpx;
}


.order-footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding:0 100rpx 0 80rpx;
  box-sizing: border-box;
  background: #AB956D;
  color: #fff;
}
.order-icon{
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 200rpx;
    height: 90rpx;
    text-align: center;
    background: #fe7f0b;
}
.order-toatl-price{
    float: left;
    width: 240rpx;
    margin-right: 200rpx;
    color: white;
}
.userInfo{
  margin-top: 40rpx;
}
/*表单内容*/
.inputView {
    background-color: white;
    line-height: 45px;
}
.line {
    width: 100%;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}
.inputText {
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 11px;
    font-size: 15px;
}
.address{
  padding-bottom: 100rpx;
}
.formLabel {
    margin: 15px 15px 15px 10px;
    color: gray;
    font-size: 15px;
}
.name{
  background-color: #da9b5d;
}
