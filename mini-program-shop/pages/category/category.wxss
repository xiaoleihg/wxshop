.categroy-left{
    float: left;
    width: 25%;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
}
.categroy-left .cate-list.on{
    color: #fe7f0b;
    border-color: #fe7f0b;
}

.categroy-right{
    float: right;
    width: 75%;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:40rpx;
    box-sizing: border-box;
}
.goods-item {
  width: 44%;
  float: left;
  height: 350rpx;
  margin-left: 3%;
  margin-bottom: 10px;
  background: whitesmoke;
  border: 2rpx solid tan;
}
.goods-img image{
  height:250rpx;
  margin: 0;
  padding: 0;
}
.index_img {
  width: 100%;
  height: 200px;
}
.goods_bottom {
  margin: 0;
  padding:0;
  text-align: left;
  font-size: 13px;
  color: #737373; 
  height: 15px;
}